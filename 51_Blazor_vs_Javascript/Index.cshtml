@page "/hello"
<h3>Hello World</h3>
<div class="text-danger alert-danger">@Message</div>
<div class="form-group">
    <label>Name:</label>
    <input type="text" @bind="@Name" class="form-control" />
</div>
<div class="form-group">
    <label>City:</label>
    <select name="city" class="form-control" @bind="SelectedCity">
        @foreach (string city in Cities)
        {
            <option value="@city">
                @city
            </option>
        }
    </select>
</div>
<button type="submit" class="btn btn-primary" @onclick="@SayHello">Create</button>

@code {
    public string Name { get; set; }
    
    public IEnumerable<string> Cities => new List<string> { "New York", "Boston", "Moscow", "Beijing", "Tokio", "New Delhi" };
    
    public string SelectedCity { get; set; }
    
    public string Message { get; set; }

    public void SayHello()
    {
        Message = "Hello " + @Name + " from "+ SelectedCity;
    }
}